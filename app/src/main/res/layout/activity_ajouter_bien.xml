<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.michelparis.myapplication.AjouterBien"
    android:weightSum="1">

   <!-- <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /> -->


 <EditText
     android:id="@+id/nom_bien"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="Nom"
     android:inputType="textPersonName"
     android:selectAllOnFocus="true" />

    <Spinner
        android:id="@+id/select_liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/select_categorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/date_achat_bien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Date d'achat"
        android:inputType="date" />

    <EditText
        android:id="@+id/description_bien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:ems="10"
        android:hint="Description du bien"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/commentaire_bien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:ems="10"
        android:hint="Commentaire sur le bien"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/numero_serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NumÃ©ro de serie"
        android:inputType="text" />

    <EditText
     android:id="@+id/prix_bien"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="Prix"
     android:inputType="number" />

    <Button
        android:id="@+id/ajouterBien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAjouterBien"
        android:text="Ajouter" />
</LinearLayout>

